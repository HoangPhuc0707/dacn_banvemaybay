                                <h2>${flight.fares.filter(fare => fare.fareType === seat).map(fare => fare.fareAmount).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })}</h2>
                                <p>/Người</p>
                            </div>
                        </div>
